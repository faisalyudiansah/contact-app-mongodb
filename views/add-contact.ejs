<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Add Contact</h2>
            <% if (errors) { %>
                <div class="alert alert-danger mt-4" role="alert">
                    <ul class="mt-3">
                        <% errors.split(',').forEach(msg => { %>
                            <li><%= msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form class="mt-4" method="post" action="/add-contact">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" required name="name" class="form-control border-2" id="name">
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input type="text" required name="phoneNumber" class="form-control border-2" id="phoneNumber">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" required name="email" class="form-control border-2" id="email">
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
                <a href="/contacts" class="btn btn-secondary mx-2">Cancel</a>
            </form>
        </div>
    </div>
</div>